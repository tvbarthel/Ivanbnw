<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/home_background_view_right_triangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/home_background_view_left_triangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/home_background_view_list_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <View
        android:id="@+id/home_background_view_list_background_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_size"
        android:background="@drawable/shadow_from_bottom_to_top" />


</merge>