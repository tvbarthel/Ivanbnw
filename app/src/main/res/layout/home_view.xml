<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fr.tvbarthel.ivanbnw.home.HomeBackgroundView
        android:id="@+id/home_view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_view_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/player_view_height"
        android:paddingLeft="@dimen/default_padding_half"
        android:paddingRight="@dimen/default_padding_half" />

    <ProgressBar
        android:id="@+id/home_view_dummy_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />

    <fr.tvbarthel.ivanbnw.player.PlaylistView
        android:id="@+id/home_view_playlist_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</merge>